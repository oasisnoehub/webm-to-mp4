# 服务器配置
PORT=3000
HOST=0.0.0.0
NODE_ENV=production

# 文件存储
UPLOAD_DIR=./uploads
OUTPUT_DIR=./output
TEMP_DIR=./temp

# 数据库配置
DB_TYPE=sqlite
DB_HOST=localhost
DB_PORT=5432
DB_NAME=videoconvert
DB_USER=admin
DB_PASSWORD=your_password_here

# Redis 配置
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# 支付配置（Stripe）
PAYMENT_PROVIDER=stripe
PAYMENT_PUBLIC_KEY=pk_test_xxxxx
PAYMENT_SECRET_KEY=sk_test_xxxxx
PAYMENT_WEBHOOK_SECRET=whsec_xxxxx

# 邮件配置
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
EMAIL_FROM=noreply@videoconvert.com

# 监控配置
MONITORING_ENABLED=false
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
GA_ID=UA-XXXXX-X

# CDN 配置
CDN_ENABLED=false
CDN_URL=https://cdn.videoconvert.com
CDN_BUCKET=videoconvert-assets

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# JWT 密钥
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# 会话密钥
SESSION_SECRET=your_session_secret_key_here

# CORS 配置
CORS_ORIGIN=*

# 速率限制
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
