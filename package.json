{
  "name": "videoconvert-saas",
  "version": "1.0.0",
  "description": "VideoConvert - Professional WebM to MP4 converter SaaS application",
  "main": "server-production.js",
  "scripts": {
    "start": "node server.js",
    "start:prod": "NODE_ENV=production node server-production.js",
    "dev": "nodemon server.js",
    "dev:prod": "nodemon server-production.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "pm2:start": "pm2 start server-production.js --name videoconvert",
    "pm2:stop": "pm2 stop videoconvert",
    "pm2:restart": "pm2 restart videoconvert",
    "pm2:logs": "pm2 logs videoconvert",
    "docker:build": "docker build -t videoconvert .",
    "docker:run": "docker run -p 3000:3000 videoconvert"
  },
  "keywords": [
    "video",
    "converter",
    "webm",
    "mp4",
    "ffmpeg",
    "saas"
  ],
  "author": "VideoConvert Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "fluent-ffmpeg": "^2.1.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-session": "^1.17.3",
    "connect-redis": "^7.1.0",
    "redis": "^4.6.11",
    "winston": "^3.11.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
